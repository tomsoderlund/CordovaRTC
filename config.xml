<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tomorroworld.teleport" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaRTC</name>
    <description>WebRTC Live Streaming for Cordova (mobile apps).</description>
    <author email="youremail" href="yourwebsite">Your Name</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.0.0" />
    <plugin name="com.dooble.phonertc" spec="https://github.com/alongubkin/phonertc.git" />
</widget>
